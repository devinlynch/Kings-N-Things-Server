<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.kings.model.User" table="user">
        <id name="userId" column="user_id">
            <generator class="native" />
        </id>
        <property name="username" />
        <property name="password" />
        <property name="hostName" column="host_name" />
        <property name="port" />
        <set name="games" table="game_user">
        	<key>
        		<column name="user_id" not-null="true" />
            </key>
            <many-to-many entity-name="com.kings.model.Game">
                <column name="game_id" not-null="true" />
            </many-to-many>
        </set>
        
        <list name="sentMessages" table="sent_message" cascade="all">
        	<key>
        		<column name="game_id" />
            </key>
            <list-index column="created_date"/>
            <one-to-many class="com.kings.model.SentMessage" />
        </list>
    </class>
</hibernate-mapping>